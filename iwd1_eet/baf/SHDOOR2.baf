IF
	Opened([ANYTHING])
	!BitCheck("AREA_GROUP_VAR","MYAREA",1)
THEN
	RESPONSE #100
		OpenDoor("AR5404DOOR1")
		OpenDoor("AR5404DOOR2")
		OpenDoor("AR5404DOOR3")
		BitSet("AREA_GROUP_VAR","MYAREA",1)
END

IF
	Unlocked([ANYTHING])
	!BitCheck("AREA_GROUP_VAR","MYAREA",1)
THEN
	RESPONSE #100
		OpenDoor("AR5404DOOR1")
		OpenDoor("AR5404DOOR2")
		OpenDoor("AR5404DOOR3")
		BitSet("AREA_GROUP_VAR","MYAREA",1)
END

