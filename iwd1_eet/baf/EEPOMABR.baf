IF
	GlobalLT("SHOTS_FIRED","LOCALS",100)
	!GlobalTimerNotExpired("POMAB_SHOOT","MYAREA")
	See(NearestEnemyOf(Myself))
THEN
	RESPONSE #60
		SetGlobalTimer("POMAB_SHOOT","MYAREA",3)
		IncrementGlobal("SHOTS_FIRED","LOCALS",1)
		UseItem("WANDREA",NearestEnemyOf(Myself)) // Жезл Молний
	RESPONSE #40
		Continue()
END

