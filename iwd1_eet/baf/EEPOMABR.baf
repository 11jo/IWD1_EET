IF
	HPGT(Myself,3000)
THEN
	RESPONSE #100
		ChangeStat(Myself,MAXHITPOINTS,3000,SET)
		ApplySpellRES("IDMXHPS",Myself)
		Continue()
END

IF
	Global("KILL_FAKE_POMAB","GLOBAL",0)
	HPLT(Myself,3000)
THEN
	RESPONSE #100
		SetGlobal("KILL_FAKE_POMAB","GLOBAL",1)
		ClearActions(LastAttackerOf(Myself))
		Continue()
END

